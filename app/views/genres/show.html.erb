<h1><%= @genre.name %></h1>

<h2>Movies in this Genre:</h2>

<ul>
  <% @movies.each do |movie| %>
    <li><%= link_to movie.title, movie_path(movie) %></li>
  <% end %>
</ul>

<% if current_user.admin? %>
  <%= link_to 'Edit Genre', edit_genre_path(@genre), class: "btn btn-warning" %>
  <%= link_to 'Delete Genre', genre_path(@genre), class: "btn btn-danger", 
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <%= link_to 'Go back to list', genres_path %>
<% end %>


